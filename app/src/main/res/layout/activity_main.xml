<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary"
            android:layout_marginBottom="24dp" />

        <!-- How to use section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.CardView.Outlined">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_to_use_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_to_use_body"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Service Control -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.CardView.Outlined">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_control_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_control_desc"
                    android:textSize="13sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_service_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_toggle_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_service"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Storage Settings -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.CardView.Outlined">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storage_settings_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/radio_group_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rb_internal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/storage_internal"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/rb_sd_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/storage_sd_card"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />

                </RadioGroup>

                <Button
                    android:id="@+id/btn_choose_folder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_folder"
                    android:enabled="false"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_marginBottom="12dp" />

                <!-- Current path display -->
                <TextView
                    android:id="@+id/tv_current_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_path"
                    android:textSize="14sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="?android:textColorSecondary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Info card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.CardView.Outlined">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note_body"
                    android:textSize="13sp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="?android:textColorSecondary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
