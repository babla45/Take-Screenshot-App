<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resize_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Preview -->
    <ImageView
        android:id="@+id/iv_resize_preview"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="#1A000000"
        android:layout_marginBottom="16dp"
        android:contentDescription="Resize preview" />

    <!-- Current dimensions info -->
    <TextView
        android:id="@+id/tv_current_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:textColor="?android:textColorSecondary"
        android:layout_marginBottom="12dp" />

    <!-- Width input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/resize_width"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_width"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="14sp"
            android:gravity="center"
            android:importantForAutofill="no" />
    </LinearLayout>

    <!-- Height input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/resize_height"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_height"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="14sp"
            android:gravity="center"
            android:importantForAutofill="no" />
    </LinearLayout>

    <!-- Lock aspect ratio -->
    <CheckBox
        android:id="@+id/cb_lock_aspect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_aspect_ratio"
        android:checked="true"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Preset percentage buttons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resize_presets"
        android:textSize="13sp"
        android:textColor="?android:textColorSecondary"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_25"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="25%"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_50"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:text="50%"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_75"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="75%"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>

